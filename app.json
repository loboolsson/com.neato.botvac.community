{
  "id": "com.neatorobotics",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Neato BotVac"
  },
  "description": {
    "en": "Homey app that adds support for the Neato BotVac series",
    "nl": "Homey app die support voor de Neato BotVac serie toevoegd"
  },
  "category": [
    "appliances"
  ],
  "tags": {
    "en": ["vacuumcleaner", "vacuum", "robot", "robotics", "neato"],
    "nl": ["stofzuiger", "robot", "robots", "neato"]
  },
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png"
  },
  "permissions": [],
  "author": {
    "name": "Matthew Waanders",
    "email": "matthew@athom.nl"
  },
  "drivers": [
    {
      "id": "botvac",
      "name": {
        "en": "BotVac driver"
      },
      "images": {
        "small": "/drivers/botvac/assets/images/small.jpg",
        "large": "/drivers/botvac/assets/images/large.jpg"
      },
      "class": "vacuumcleaner",
      "capabilities": ["measure_battery", "vacuumcleaner_state"],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}
