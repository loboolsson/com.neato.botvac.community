{
  "id": "com.neato.botvac.community",
  "version": "0.0.3",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#f2612c",
  "name": {
    "en": "Neato BotVac Community"
  },
  "description": {
    "en": "Community developed app for Neato Botvac Connected series"
  },
  "category": [
    "appliances"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Lobo Olsson",
    "email": "lobo.olsson@gmail.com"
  },
  "source": "https://github.com/loboolsson/com.neato.botvac.community",
  "flow": {
    "actions": [
      {
        "id": "start_cleaning",
        "title": {
          "en": "Start a cleaning cycle"
        }
      },
      {
        "id": "stop_cleaning",
        "title": {
          "en": "Stop a cleaning cycle"
        }
      }
    ]
  },
  "drivers": [
    {
      "id": "botvac",
      "name": {
        "en": "BotVac"
      },
      "class": "vacuumcleaner",
      "capabilities": [
        "measure_battery",
        "alarm_battery",
        "onoff",
        "vacuumcleaner_state"
      ],
      "images": {
        "large": "/drivers/botvac/assets/images/large.png",
        "small": "/drivers/botvac/assets/images/small.png"
      }
    }
  ]
}